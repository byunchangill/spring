<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springboard.BoardMapper">
    <insert id="insBoard">
        INSERT INTO t_board(title, ctnt) VALUES (#{title}, #{ctnt})
    </insert>

    <select id="selBoardList" resultType="BoardEntity"> <!-- select문은 resultType 필요. -->
        SELECT iboard, title, hits, rdt FROM t_board ORDER BY iboard DESC
    </select>

    <select id="selBoard" resultType="BoardEntity">
        SELECT * FROM t_board WHERE iboard = ${iboard}
    </select>

    <delete id="delBoard">
        DELETE FROM t_board WHERE iboard = ${iboard}
    </delete>
</mapper>